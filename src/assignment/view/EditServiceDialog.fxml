<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="800.0" stylesheets="@Testing.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="assignment.view.EditServiceDialogController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
         <children>
            <GridPane vgap="10.0">
               <children>
                  <Label text="Room Number" />
                  <Label text="Service" GridPane.rowIndex="1" />
                  <Label text="Created Date" GridPane.columnIndex="2" GridPane.halignment="RIGHT">
                     <GridPane.margin>
                        <Insets right="25.0" />
                     </GridPane.margin>
                  </Label>
                  <TextField fx:id="roomIDField" GridPane.columnIndex="1" />
                  <HBox alignment="BOTTOM_RIGHT" spacing="10.0" GridPane.columnIndex="3" GridPane.rowIndex="2">
                     <children>
                        <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearch" prefWidth="100.0" text="Search" />
                     </children>
                  </HBox>
                  <Label fx:id="createdDateLabel" text="Label" GridPane.columnIndex="3" />
                  <RadioButton fx:id="currentGuestButton" mnemonicParsing="false" selected="true" text="Current guest" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets right="25.0" />
                     </GridPane.margin>
                     <toggleGroup>
                        <ToggleGroup fx:id="guest" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="futureGuestButton" mnemonicParsing="false" text="Future guest" toggleGroup="$guest" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                  <ComboBox fx:id="serviceBox" promptText="-Select service name-" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               </children>
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" prefWidth="160.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" prefWidth="160.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" prefWidth="160.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
            </GridPane>
            <TableView fx:id="availableGuestTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="SOMETIMES">
              <columns>
                <TableColumn fx:id="custFirstNameColumn" prefWidth="75.0" text="First Name" />
                <TableColumn fx:id="custLastNameColumn" prefWidth="75.0" text="LastName" />
                  <TableColumn fx:id="checkInColumn" prefWidth="75.0" text="Check-In" />
                  <TableColumn fx:id="checkOutColumn" prefWidth="75.0" text="Check-Out" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
               <children>
                  <Button fx:id="okButton" mnemonicParsing="false" onAction="#handleOk" prefWidth="100.0" text="OK" />
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" prefWidth="100.0" text="Cancel" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
